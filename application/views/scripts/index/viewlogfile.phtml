	function PrintDescription($dataFilesPath)
		{ 
		$Succses=file_exists($dataFilesPath . "/Описание.txt");
		if($Succses)
			{
			$file=fopen($dataFilesPath . "/Описание.txt","r");
			while (!feof($file)) 
			    {
			    $string = fgets($file);
			    echo "$string <br>";
			    }
			}
		$Succses=fclose($file);
		}

	function Show($dataFilesPath)
		{
		$logfile=$dataFilesPath . "/logfile.log";
		echo("This prog logfile = $logfile <br>");
